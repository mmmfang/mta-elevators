<div class="centered">
    <h2>User Profile Page</h2>

    <h4>You are logged in as  <%= user.email%> </h4>

    <hr/>
    <div>
    <h4>SET USER PREFERENCES</h4>
    <br/>
    <h4>Do you wish to recieve notifications about elevator/escalator outages?</h4>
    <form action="/users/<%= user._id%>/?_method=PATCH" method="post">

        <label for="yes">Yes</label>
        <input id='yes' type="radio" value='true' name='user[notifications]'>
        <label for="no">No</label>
        <input id='no' type="radio" name='user[notifications]' value='false'>

        <br/>
        <br/>

        <h4>Which train line do you want to recieve notifications about?</h4>
          <select name="user[trainline]" id="trainlineselect">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
            <option value="E">E</option>
            <option value="F">F</option>
            <option value="G">G</option>
            <option value="J">J</option>
            <option value="L">L</option>
            <option value="M">M</option>
            <option value="N">N</option>
            <option value="Q">Q</option>
            <option value="R">R</option>
            <option value="S">S</option>
            <option value="Z">Z</option>
          </select>

          <br/>
          <br/>

        <input type="submit">

    </form>
    </div>
</div>